<form class="login-form" modelAttribute="user" method="post" action="updatepassword" >
    
    <div>

        <h3 class="join_title">

            <label for="id">아이디</label>

        </h3>

        <input type="text" class="form-control" path="id"
            id="id" name="userId" />
            
        


    </div>
    <div>

        <h3 class="join_title">

            <label for="pswd1">새로운 비밀번호</label>

        </h3>

        <input type="password" path="pass" id='pass' name="userPw"
            class="form-control" maxlength="30" size='10' />
        



    </div>

    <div>

        <h3 class="join_title">

            <label for="pswd1">비밀번호 확인</label>

        </h3>

        <input type="password" path="pass" id='pass' name="userPwRe"
            class="form-control" maxlength="30" size='10' />
        



    </div>

    
    <div class="btn_area">
   
        <button type="submit" id="btnJoin">

            <span>비밀번호변경</span>

        </button>

    </div>

</form>
