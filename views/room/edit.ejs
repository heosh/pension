<div class="col-md">
    <table width=100%>
        <tr>
            <td width="40%" height="100%" style="vertical-align: top;background:#ffffff">
                <div id='info' style="padding:10px">
                <form name = "imgForm" method="post" enctype="multipart/form-data" action="/room/update?_method=PUT">
                    <button style="font-size:1em">저장</button>
                    <a class='button' href="javascript:history.back()" onclick="return confirm('취소하시겠습니까?')">취소</a>
                    <input type="hidden" name="id" value="<%=`${roomData[0].id}`%>">
                    <label>방 이름</label>
                    <input type="text" name="name" value='<%=`${roomData[0].name}`%>' required>
                    <label>기준인원</label>
                    <input type="number" name="maxpeople" min="1" max="10"  value='<%=`${roomData[0].maxpeople}`%>'>
                    <label>체크인</label>
                    <input type="time" name="check_in" step="600"  value='<%=`${roomData[0].check_in}`%>'>
                    <label>체크아웃</label>
                    <input type="time" name="check_out" step="600"  value='<%=`${roomData[0].check_out}`%>'>
                    <label>서비스</label>
                    <textarea name="service"><%=`${roomData[0].service}`%></textarea>
                    <label>설명</label>
                    <textarea type="text" name="description"><%=`${roomData[0].description}`%></textarea>
                </div>
            </td>
            <td width="60%" style='background:#ffffff'>
                <div style="margin-left:20px">
                    <label class='form-group'>사진 업로드</label>
                    <div class='form-group'>
                        <label for="img">메인 사진</label>
                        <input type="file" name="0" accept="image/*">
                        <input type="hidden" name="main_img" value="<%=`images/room/${roomData[0].name}_0.jpg`%>">
                    </div>
                    <div class='form-group'>
                        <label for="img">첫번째 사진</label>
                        <input type="file" name="1" accept="image/*">
                    </div>
                    <div class='form-group'>
                        <label for="img">두번째 사진</label>
                        <input type="file" name="2" accept="image/*">
                    </div>
                    <div class='form-group'>
                        <label for="img">세번째 사진</label>
                        <input type="file" name="3" accept="image/*">
                    </div>
                    <div class='form-group'>
                        <label for="img">네번째 사진</label>
                        <input type="file" name="4" accept="image/*">
                    </div>           
                    <div id='imges'>
                        <% for(var i=1; i<= 4; i++){ %>
                            <img id='images'><img src="<%= `/images/room/${roomData[0].id}_${i}.jpg` %>" style='width:100%'>
                        <%}%>
                    </div>
                </form>
                </div>
            </td>
        </tr>
    </table>
</div>